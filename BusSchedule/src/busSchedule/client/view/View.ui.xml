<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>


    <g:VerticalPanel ui:field="mainPanel" >
        <g:HorizontalPanel>
            <g:VerticalPanel ui:field="sortingPanel">
                <g:Label ui:field="label" text = "Sorting by:"/>
                <g:Button ui:field="sortByNumber" text="Number"/>
                <g:Button ui:field="sortByDeparture" text="Departure"/>
                <g:Button ui:field="sortByDestination" text="Destination"/>
                <g:Button ui:field="sortByTime" text="Time"/>
            </g:VerticalPanel>
            <g:FlowPanel ui:field="tablePanel"/>
            <g:VerticalPanel>
                <g:Button ui:field="addRow" text="Add"/>
                <g:Button ui:field="deleteRow" text="Delete"/>
            </g:VerticalPanel>
        </g:HorizontalPanel>
        <g:HorizontalPanel>
            <g:Button ui:field="previousPage" text="Previous"/>
            <g:Button ui:field="nextPage" text="Next"/>
        </g:HorizontalPanel>
    </g:VerticalPanel>

</ui:UiBinder>